kind: Secret
metadata:
  name: grafana-datasource-influxkafka
  namespace: monitoring
  labels:
     grafana_datasource: import
type: Opaque
stringData:
  influxkafkadatasource.yaml: |-
    apiVersion: 1
    datasources:
      - name: InfluxKafka
        type: influxdb
        access: proxy
        database: influxv3
        url: http://np04-srv-023.cern.ch:31002
        withCredentials: true
        basicAuth: true
        user: admin
        basicAuthUser: admin
        jsonData:
          httpMode: POST
        secureJsonData:
          password: puttherealpasswordhere # this note does not contain the real password
          basicAuthPassword: puttherealpasswordhere # this note does not contain the real password
