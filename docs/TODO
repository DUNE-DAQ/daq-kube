apiVersion: v1
kind: Secret
metadata:
  name: grafana-datasource-postgresqlers
  namespace: monitoring
  labels:
     grafana_datasource: import
type: Opaque
stringData:
  postgresqlers.yaml: |-
    apiVersion: 1
    datasources:
    - name: PostgresERS
      type: postgres
      url: np04-srv-023.cern.ch:30432
      access: proxy
      database: ApplicationDbErrorReporting
      jsonData:
        sslmode: "disable"
        tlsSkipVerify: true
        postgresVersion: 1200
        maxIdleConns: 2
      user: admin
      secureJsonData:
        password: puttherealpasswordhere # this note does not contain the real password
---
